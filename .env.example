# Database
DATABASE_URL=postgresql://postgres:postgres123@postgres:5432/transparencia

# Redis
REDIS_URL=redis://redis:6379

# Security
SECRET_KEY=your-super-secret-key-change-in-production-minimum-32-characters
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8000,https://yourdomain.com

# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAILS_FROM_EMAIL=noreply@transparencia.gov.br
EMAILS_FROM_NAME=Portal de Transparência

# File Upload
MAX_FILE_SIZE=52428800  # 50MB
UPLOAD_DIR=uploads

# AWS S3 (for production)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_BUCKET_NAME=transparencia-files
AWS_REGION=us-east-1

# Environment
ENVIRONMENT=development

# Superuser (first admin user)
FIRST_SUPERUSER=admin@transparencia.gov.br
FIRST_SUPERUSER_PASSWORD=admin123

# Elasticsearch
ELASTICSEARCH_URL=http://elasticsearch:9200

# MinIO (S3-compatible storage)
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin123
MINIO_ENDPOINT=http://minio:9000

# Monitoring
SENTRY_DSN=your-sentry-dsn-here

# Frontend
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_APP_NAME=Portal de Transparência

# Legal Compliance
LAI_RESPONSE_DAYS=20
LAI_APPEAL_DAYS=10
LC131_REAL_TIME_HOURS=24

# Multi-tenancy
DEFAULT_TENANT=default

# Cache
CACHE_TTL=300

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

